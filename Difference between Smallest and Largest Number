import java.util.Scanner;
public class Aryan {

public static void main(String[]args){

Scanner input=new Scanner(System.in);

int x=input.nextInt();
int y=input.nextInt();
int z=input.nextInt();
int max = x;
if (y>max){max = y;}
if (z>max){max=z;}
int min = x;
if (y<min){min = y;}
if (z<min){min =z;}
System.out.print(max-min);


}
}
